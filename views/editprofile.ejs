<%- contentFor('editprofile')%>

 <div class="page-header">

<head>
<div class="form-group">
   <h2>Edit Profile</h2>
</div>
</head>

</div>
 <div class="form-group">
        <div class="pull-left">
            <% if(user.profileimg){ %>
                <img class="img-thumbnail"  style="max-height: 150px; max-width: 150px;"  src = "<%= user.profileimg %>" />
            <% } %>
        </div>
        <br>
        <label >       <h2><%= user.username %></h2></label>

    </div>

<body>
    <form method="post" enctype="multipart/form-data" action="/portfolios/editprofile">
        <div class="form-group">
            <label>Choose new profile picture:</label>
            <input type="file" name="profileimg" accept="image/*"/>
        </div>
        <div class="pull-right">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
     </form>
    <br>
</body>
