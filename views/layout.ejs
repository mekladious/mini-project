<! DOCTYPE HTML>
<html>
    <head>
        <title> GUC Student Portfolio</title>
        <link rel="stylesheet" href="/css/bootstrap.css"/>
        <link rel="stylesheet" href="/css/style.css"/>
    </head>
    <body>
         <div class="container">
      <div class="header clearfix">
        <nav>
          <ul class="nav nav-pills pull-right">
            
            <li role="presentation" ><a href="/">Home Page</a></li>

            <% if(!user) {  %> 
              <li role="presentation"><a href="/users/login">Login</a></li>
              <li role="presentation"><a href="/users/register">Register</a></li>
            <% } else { %>
              <li role="presentation" ><a href="/portfolios/profile">My Portfolio</a></li>
              <li role="presentation"><a href="/users/logout">Logout</a></li>
            <% } %>
          </ul>
        </nav>
        <h3 class="text-muted">GUC Student Portfolio</h3>
      </div>
     <div class="row">
        <div class="col-lg-12">

           <% if(success_msg.length!==0){ %>
            <div class="alert alert-success"> <%= success_msg %> </div>
          <% } %>

          <% if(error_msg.length!==0){ %>
            <div class="alert alert-danger"> <%= error_msg %> </div>
          <% } %>

          <% if(error.length!==0){ %>
            <div class="alert alert-danger"> <%= error %> </div>
          <% } %>
          
        </div>
      </div>

<!-- Main Content Here! -->
<%- defineContent('login') %>
<%- defineContent('profile') %>
<%- defineContent('register') %>
<%- defineContent('index') %>
<%- defineContent('addwork') %>
<%- defineContent('editprofile') %>
<%- defineContent('allprojects') %>
<%- defineContent('projectdetails') %>


      <footer class="footer">
        <p>&copy; 2016 GUC Student Portfolio, Inc.</p>
      </footer>

    </div> <!-- /container -->
    </body>
</html>